<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= fish.name %></title>
  <link href="/css/styles.css" rel="stylesheet" />
</head>
<body>
  <div class="ds-container">
    <div class="nintendo-3ds">
      <div class="top-screen">
        <div class="fish-name"><%= fish.name %></div>
        <div class="fish-image">
          <img src="<%= fish.imageURL %>" alt="<%= fish.name %> image" />
        </div>
      </div>
          
      <div class="bottom-screen">
        <div class="stats-container">
          <div class="type-badge"><%= fish.type %></div>
          
          <div class="stat-row">
            <span>HP</span>
            <span><%= fish.hp %></span>
          </div>
          
          <div class="stat-row">
            <span>ATK</span>
            <span><%= fish.atk %></span>
          </div>
          
          <div class="stat-row">
            <span>DEF</span>
            <span><%= fish.def %></span>
          </div>
          
          <div class="description">
            <%= fish.description %>
          </div>
          
          <a onclick="playClick('/home/')" class="back-button">BACK</a>
        </div>
      </div>
    </div>
  </div>
  <audio id="click" src="/sounds/sound2.mp3"></audio>
  <script>
    function playClick(destination) {
      const clickSound = document.getElementById("click");

      clickSound.currentTime = 0.3;
      clickSound.play().catch((e) => console.log("Click sound blocked:", e));

      setTimeout(() => {
        window.location.href = destination;
      }, 500);
    }
  </script>
</body>
</html>